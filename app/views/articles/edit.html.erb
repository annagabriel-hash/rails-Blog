<h1>Edit article</h1>
<% if @article.errors.any? %>
  <h2>The following errors prevented the form from submitting: </h2>
  <ul>
  <% @article.errors.full_messages.each do |err_msg| %>
      <li><%= err_msg %></li>
  <% end %>
  </ul>
<% end %>
<%= form_with model: @article do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_field :body %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
